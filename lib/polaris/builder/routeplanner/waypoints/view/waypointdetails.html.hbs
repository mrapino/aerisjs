<div class="infoPanel">
  <h1>Waypoint Details</h1>
  <header>
    <h2>{{ service.name }}</h2>
    <small>near {{ place.name }}, {{ place.state }}</small>
  </header>

  <section class="attributes">
    <ul>
      <li>
        <span class="{{typeIconClass type }}"></span>{{ service.type }}
      </li>
    </ul>
  </section>

  <section class="address">
    {{ service.address }}<br/>
    {{ place.name}}, {{ place.state }} {{ service.postalCode }}<br/>
    {{ service.phone }}
  </section>

  {{#if service.url }}
    <section>
      <a class="externalButton" href="{{ service.url }}" target="_blank">Visit Website</a>
    </section>
  {{/if}}
</div>