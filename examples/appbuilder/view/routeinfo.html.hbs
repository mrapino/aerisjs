<div class="title">
  <h2>{{ name }}</h2>
  <small>near {{ place.name }}, {{ place.state }}</small>
</div>
<div class="feature">
  <label>Distance</label>

  <div class="featureValue">{{toMiles distance }}<small>MI</small></div>
</div>
<div class="feature">
  <label>Snow depth</label>

  <div class="featureValue">11.7<small>IN</small></div>
</div>
